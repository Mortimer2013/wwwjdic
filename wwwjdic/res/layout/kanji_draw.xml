<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_layout" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/hwr_button_group"
        android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:visibility="visible" android:orientation="horizontal"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="4dip" android:layout_marginTop="4dip"
        android:layout_marginLeft="2dip" android:layout_marginRight="2dip">
        <Button android:id="@+id/recognize_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="@string/hkr_abbrev" />
        <Button android:id="@+id/ocr_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="@string/ocr" />
        <Button android:id="@+id/clear_canvas_button"
            android:layout_height="fill_parent" android:layout_width="0px"
            android:layout_weight="1" android:text="@string/clear" />
        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lookAheadCb"
            android:text="@string/look_ahead" android:layout_gravity="center_vertical"
            android:textSize="12sp" android:checked="false"></CheckBox>
    </LinearLayout>
    <org.nick.wwwjdic.hkr.KanjiDrawView
        android:id="@+id/kanji_draw_view" android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
